<% _front_page = front_page? %>

<% unless _front_page %><%= render 'shared/logo' %><% end %>

<ul class="navigation">
  <li>
    New Work:
    <ul>
      <li<% if framed_page?  %> class="current"<% end %>>
        <a href="<%= gallery_path(:framed) %>">Framed</a>
      </li>
      <li<% if scrolls_page?  %> class="current"<% end %>>
        <a href="<%= gallery_path(:scrolls) %>">Scrolls</a>
      </li>
    </ul>
  </li>

  <li<% if archive_page? %> class="current"<% end %>>
    <a href="<%= gallery_path(:archive) %>">Other Work</a>
  </li>

  <li<% if about_page? %> class="current"<% end %>>
    <a href="<%= about_path %>">About</a>
  </li>

  <li<% if contact_page? %> class="current"<% end %>>
    <a href="<%= contact_path %>">Contact</a>
  </li>
</ul>

